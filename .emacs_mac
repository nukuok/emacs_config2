(defun split-window-and-run-shell ()
  (progn 
    (setq w (selected-window))
    (setq w2 (split-window w nil t))
    (setq w3 (split-window-below))
    (command-execute 'balance-windows)
    (select-window w)
;    (term "/bin/bash")
    (eshell)
    (select-window w2)))

(add-hook 'after-init-hook (lambda () (split-window-and-run-shell)))

